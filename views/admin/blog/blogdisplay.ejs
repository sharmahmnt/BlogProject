<%- include('../../header.ejs') %>

<section class="mtb-25">
  <div class="container bg-white mt-md-4">
    <div class="body-content">
      <div class="row mt-md-4">
        <div class="col-md-3">
          <div class="dash-left">
            <ul>
              <li class="active">
                <a href="/admin/dashboard" class="active nav-link">Dashboard</a>
              </li>
              <li><a href="/admin/blogdisplay" class="">Display Blog</a></li>
              <li><a href="/admin/categorydisplay" class="">Categories</a></li>
              <li><a href="/admin/contactdisplay" class="">Contact</a></li>
              <li><a href="/admin/aboutdisplay" class="">About</a></li>
              <li><a href="/login" class="">Logout</a></li>
            </ul>
          </div>
        </div>
        <div class="col-md-9">
          <div class="dash-right">
            <div class="dash-header">
              <div class="dash-title">
                <h1 style="color: #386576">Blog</h1>
              </div>
              <div class="dash-nav">
                <button
                  type="button"
                  class="btn btn- btn-warning text-white"
                  data-bs-toggle="modal"
                  data-bs-target="#exampleModal"
                >
                  Add blog
                </button>
              </div>
            </div>
          </div>
          <table class="table-bordered table-striped">
            <tr class="table_heading text-white text-center">
              <th>ID No.</th>
              <th>Title</th>
              <th>Description</th>
              <th>Image</th>
              <th>Action</th>
            </tr>
            <% d.forEach((item)=>{ %>

            <tr>
              <td><%= item._id %></td>
              <td class="text-center"><%= item.title %></td>
              <td class="text-justify"><%= item.description %></td>
              <td>
                <img src="<%= item.image.url %>" alt="" width="120px" />
              </td>
              <td>
                <a href="/blogview/<%= item._id %>" class="btn btn-warning btn-lg action-btn"
                  ><i class="fa-solid fa-eye"></i
                ></a>
                <a href="/blogedit/<%= item._id %>" class="btn btn-warning btn-lg action-btn"
                  ><i class="fa-regular fa-pen-to-square"></i
                ></a>
                <a href="/blogdelete/<%= item._id %>" class="btn btn-warning btn-lg action-btn"
                  ><i class="fa-solid fa-trash"></i
                ></a>
              </td>
            </tr>

            <% }) %>
          </table>
        </div>
      </div>
      <!----row-end----->
    </div>
  </div>
  <!---container--end---->
</section>
<!-- modal blog create -->
<!-- Button trigger modal -->

<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add blog</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form action="/insertblog" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="">Title</label>
            <input type="text" name="title" class="form-control" />
          </div>
          <div class="mb-3">
            <label for="">Discription</label>

            <textarea
              type="text"
              name="description"
              class="form-control"
            ></textarea>
          </div>
          <div class="mb-3">
                    <label for=""> upload image</label>
                    <input type="file" name="image" class="form-control">
                </div>
          <button type="submit" class="btn btn-warning text-white">
            submit
          </button>
        </form>

        ..
      </div>
    </div>
  </div>
</div>

<%- include('../../footer.ejs') %>
